<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a84974.projectsmarttask.ahbottombaractivity.thongBaoBottom">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarthongbao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/mauChuDao">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thông Báo"
                android:textColor="@color/mauTrang"
                android:textSize="@dimen/logo_text" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigationView"
        android:layout_below="@+id/toolbarthongbao"></android.support.v7.widget.RecyclerView>
     <TextView
         android:id="@+id/txtThongBao"
         android:padding="10dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Không có thông báo !"
         android:textSize="@dimen/text_title"
         android:layout_centerInParent="true"
         android:textColor="@color/mauDen"
         />

    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"></com.aurelhubert.ahbottomnavigation.AHBottomNavigation>
</RelativeLayout>
