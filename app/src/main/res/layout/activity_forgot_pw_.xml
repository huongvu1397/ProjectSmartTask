<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mauChuDao"
    android:orientation="vertical"
    tools:context=".bqh.ForgotPW_Activity">

    <ImageView
        android:id="@+id/imgAva2"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/logomain2" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Please enter your registered email below"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtEmail2Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:drawableLeft="@drawable/icons8_secured_letter_24"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/shape"
            android:id="@+id/tbBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:onClick="btBack"
            android:text="Back" />

        <Button
            android:paddingRight="3dp"
            android:background="@drawable/shape"
            android:id="@+id/btSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="Submit"
            android:onClick="btSubmit"
            android:drawableRight="@drawable/icons8_submit_for_approval_24"/>

    </LinearLayout>

</LinearLayout>