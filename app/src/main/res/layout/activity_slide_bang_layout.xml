<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lnTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/mauDoiTrang"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/slide_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:maxLines="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/logo_main" />
        </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcViewBang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lnTop"
            android:background="@color/mauNut"
            android:paddingBottom="30dp"
            android:minHeight="48dp"
            android:clipToPadding="false"

            >

        </android.support.v7.widget.RecyclerView>
        </FrameLayout>
      <FrameLayout
          android:descendantFocusability="afterDescendants"
          android:layout_width="match_parent"
          android:layout_weight="0.0"
          android:layout_height="wrap_content">
        <TextView
            android:id="@+id/btnThemThe"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:background="@color/mauDoiTrang"
            android:text="Thêm thẻ"
            android:textAlignment="center"
            android:textColor="@color/mauChuDao"
            android:textSize="20dp" />
      </FrameLayout>

</LinearLayout>
</LinearLayout>